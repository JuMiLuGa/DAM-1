DELIMITER $$

CREATE PROCEDURE `condicionalCASECondiciones` ()
BEGIN

DECLARE v_edad TINYINT UNSIGNED DEFAULT 7;
CASE
	WHEN v_edad <=12 THEN
		SELECT 'NIÃ‘@';
	WHEN v_edad <=30 THEN
		SELECT 'JOVEN';
	ELSE -- Equivale a DEFAULT (en otros lenguaje)
		SELECT 'ADULTO';
	END CASE;

END